# Ejemplo de variables de entorno para proyecto_cloud
# Copia este archivo a `.env` y reemplaza los valores

# URL de conexi√≥n para SQLAlchemy (pymysql)
# Formato: mysql+pymysql://<user>:<password>@<host>:<port>/<database>
DATABASE_URL=mysql+pymysql://orch:orchpass@host.docker.internal:3306/orchestrator

# JWT / cookies
JWT_SECRET=your_jwt_secret_here
JWT_ALG=HS256
JWT_EXPIRE_MINUTES=60
COOKIE_NAME=orchestrator_session
COOKIE_SECURE=0
COOKIE_SAMESITE=lax

# Opcional: API externa (deploy friend)
FRIEND_DEPLOY_API_URL=
FRIEND_DEPLOY_API_TOKEN=

# Timeout para httpx
HTTP_CLIENT_TIMEOUT=30
